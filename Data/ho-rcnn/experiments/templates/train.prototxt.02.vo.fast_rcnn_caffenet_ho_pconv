layer {
  name: "roi_pool5_h"
  type: "ROIPooling"
  bottom: "conv5"
  bottom: "rois_h"
  top: "pool5_h"
  roi_pooling_param {
    pooled_w: 6
    pooled_h: 6
    spatial_scale: 0.0625 # 1/16
  }
}
layer {
  name: "fc6_h"
  type: "InnerProduct"
  bottom: "pool5_h"
  top: "fc6_h"
  param {
    lr_mult: 1
    decay_mult: 1
  }
  param {
    lr_mult: 2
    decay_mult: 0
  }
  inner_product_param {
    num_output: 4096
  }
}
layer {
  name: "relu6_h"
  type: "ReLU"
  bottom: "fc6_h"
  top: "fc6_h"
}
layer {
  name: "drop6_h"
  type: "Dropout"
  bottom: "fc6_h"
  top: "fc6_h"
  dropout_param {
    dropout_ratio: 0.5
  }
}
layer {
  name: "fc7_h"
  type: "InnerProduct"
